#!/bin/bash
#
# chkconfig: 2345 65 35
# description: DHCP server control script
# processname: dhcpd

### BEGIN INIT INFO
# Provides: dhcpd
# Required-Start: $network
# Required-Stop: $network
# Default-Start: 2 3 4 5
# Default-Stop: 0 1 6
# Short-Description: Start and stop DHCP server
### END INIT INFO

DHCPD_BIN="/usr/sbin/dhcpd"
DHCPD_CONF="/etc/dhcp/dhcpd.conf"
DHCPD_USER="dhcpd"
DHCPD_GROUP="dhcpd"
DHCPD_LOG="/var/log/dhcpd.log"
PID_FILE="/var/run/dhcpd_custom.pid"

start() {
    echo "Starting DHCP server..."
    if [ -f "$PID_FILE" ] && kill -0 $(cat "$PID_FILE") 2>/dev/null; then
        echo "DHCP server already running with PID $(cat $PID_FILE)"
        return 1
    fi

    nohup $DHCPD_BIN -f -cf $DHCPD_CONF -user $DHCPD_USER -group $DHCPD_GROUP --no-pid >> $DHCPD_LOG 2>&1 &
    echo $! > $PID_FILE
    echo "Started with PID $(cat $PID_FILE)"
}

stop() {
    echo "Stopping DHCP server..."
    if [ -f "$PID_FILE" ]; then
        PID=$(cat $PID_FILE)
        if kill -0 $PID 2>/dev/null; then
            kill $PID
            rm -f $PID_FILE
            echo "Stopped DHCP server."
        else
            echo "No process found with PID $PID"
            rm -f $PID_FILE
        fi
    else
        echo "No PID file found. Is DHCP server running?"
    fi
}

restart() {
    echo "Restarting DHCP server..."
    stop
    sleep 1
    start
}

status() {
    if [ -f "$PID_FILE" ]; then
        PID=$(cat $PID_FILE)
        if kill -0 $PID 2>/dev/null; then
            echo "DHCP server is running with PID $PID"
            return 0
        else
            echo "DHCP server PID file exists but process not found."
            return 1
        fi
    else
        echo "DHCP server is not running."
        return 3
    fi
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart|reload)
        restart
        ;;
    status)
        status
        ;;
    *)
        echo "Usage: $0 {start|stop|restart|status}"
        exit 1
        ;;
esac
